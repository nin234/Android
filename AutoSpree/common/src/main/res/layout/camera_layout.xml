<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        />

    <ImageButton
        android:id="@+id/photo_capture"
        android:text="Capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/camera_selector"
        />

    <ImageButton
        android:id="@+id/video_capture"
        android:text="Capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_videocam_off_black_48dp"

        />
    <Switch
        android:id="@+id/video_picture"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:showText="true"
        android:textOn="photo"
        android:textOff="video" />
</LinearLayout>